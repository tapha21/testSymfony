{% extends 'base.html.twig' %}

{% block title %}Liste des classes{% endblock %}

{% block body %}
    <h1 class="text-3xl font-semibold text-center my-6">{{ controller_name }}</h1>

    <!-- Button to create a new class -->
    <div class="text-center my-4">
        <a href="{{ path('app_classe_create') }}" class="inline-block px-6 py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600">
            Cr√©er une classe
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-lg">
            <thead>
                <tr class="bg-gray-100 text-gray-600 text-sm uppercase">
                    <th class="px-6 py-3 border-b">ID</th>
                    <th class="px-6 py-3 border-b">Nom de la Classe</th>
                    <th class="px-6 py-3 border-b">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for classe in classes %}
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-6 py-4 text-center">{{ classe.id }}</td>
                        <td class="px-6 py-4">{{ classe.nomClasse }}</td>
                        <td class="px-6 py-4 text-center">
                            <a href="{{ path('class_show', {'id': classe.id}) }}" class="text-blue-500 hover:text-blue-700 font-medium">Voir</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-gray-500 px-6 py-4">Aucune classe disponible</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
